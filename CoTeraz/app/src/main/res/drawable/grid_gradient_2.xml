<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape  android:shape="rectangle" >
            <gradient
                android:startColor="#143982"
                android:centerColor="#16418f"
                android:endColor="#164aa3"
                android:angle="135"/>
            <corners
                android:radius="0dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#194bb3"
                android:centerColor="#2258b7"
                android:endColor="#2c64b8"
                android:angle="135"/>
            <corners
                android:radius="0dp"/>
        </shape>
    </item>
</selector>
