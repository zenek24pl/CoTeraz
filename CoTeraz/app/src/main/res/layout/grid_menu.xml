<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="4">

    <android.support.v7.widget.GridLayout
        android:id="@+id/choice_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        grid:alignmentMode="alignBounds"
        grid:columnCount="2"
        grid:rowCount="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/fragment_main_how_it_works"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/grid_gradient_1"
            android:orientation="vertical"
            android:padding="@dimen/main_grid_item_padding"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/imbored"
                android:scaleType="fitCenter"
                android:src="@drawable/bored"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Jesteś znudzony?"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white_54p"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_main_rent_return"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/grid_gradient_2"
            android:orientation="vertical"
            android:padding="@dimen/main_grid_item_padding"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/tired"
                android:id="@+id/tiredIv"
                android:layout_height="0dp"
                android:fitsSystemWindows="false"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Jesteś zmęczony ?"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white_54p"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_main_stations_map"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/grid_gradient_2"
            android:orientation="vertical"
            android:padding="@dimen/main_grid_item_padding"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/hungry"
                android:id="@+id/hungryIv"
                android:layout_height="0dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Jesteś głodny"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white_54p"
                android:textSize="18sp"
                android:id="@+id/textView" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_main_top_up"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/main_grid_item_padding"

            android:background="@drawable/grid_gradient_1"
            android:orientation="vertical"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/shopping"
                android:layout_height="0dp"
                android:id="@+id/shopIv"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:text="Potrzebujesz zakupów"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="@color/white_54p"
                android:textSize="18sp"
                android:layout_height="0dp"
                android:id="@+id/textView2" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_main_botl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/grid_gradient_1"
            android:orientation="vertical"
            android:visibility="gone"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/repair"
                android:layout_height="0dp"
                android:id="@+id/fixIv"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:text="Potrzebujesz naprawy"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="@color/white_54p"
                android:textSize="18sp"
                android:layout_height="0dp"
                android:id="@+id/tvFix" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_main_bot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/grid_gradient_1"
            android:orientation="vertical"
            android:visibility="gone"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/money"
                android:layout_height="0dp"
                android:id="@+id/moneyIv"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:text="Potrzebujesz pieniędzy"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="@color/white_54p"
                android:textSize="18sp"
                android:layout_height="0dp"
                android:id="@+id/tvMoney" />

        </LinearLayout>


    </android.support.v7.widget.GridLayout>

</RelativeLayout>