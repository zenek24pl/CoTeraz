<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialo_t"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/scan_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#02489a"
        android:gravity="center"
        android:padding="12dp"
        android:text="KUP PREMIUM JUŻ DZIŚ ! ! !"
        android:textColor="@color/white_100p" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black_54p"
        android:text="Uwaga:" />

    <TextView
        android:id="@+id/scan_dialog_bike_code_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="26sp"
        android:textStyle="bold"
        android:text="Twoja aplikacja ma obecnie okrojoną liczbę opcji aby powiększyć ich ilość i odblkować dodatkowe możliwości zakup Premium już dziś." />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/close_bt"
            android:background="@color/yellow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ZAMKNIJ"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buy_bt"
            android:background="@color/green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="ZAKUP PREMIUM"
            android:textStyle="bold"
             />

    </LinearLayout>

</LinearLayout>
